<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: bold; color: #28a745;">Главная</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#" onclick="event.preventDefault(); showLoginModal();" style="color: #28a745 !important; padding: 5px 10px; border-radius: 5px; display: inline-block; margin-right: 10px;">Доставка</a>
                            <a class="nav-link text-dark" href="#" onclick="event.preventDefault(); showLoginModal();" style="color: #28a745 !important; padding: 5px 10px; border-radius: 5px; display: inline-block; margin-right: 10px;">Контакты</a>
                            <a class="nav-link text-dark" href="#" onclick="event.preventDefault(); showLoginModal();" style="color: #28a745 !important; padding: 5px 10px; border-radius: 5px; display: inline-block; margin-right: 10px;">Магазины</a>
                            <a class="nav-link text-dark" href="#" onclick="event.preventDefault(); showLoginModal();" style="color: #28a745 !important; padding: 5px 10px; border-radius: 5px; display: inline-block; margin-right: 10px;">Акции</a>
                            <a class="nav-link text-dark" href="#" onclick="event.preventDefault(); showLoginModal();" style="color: #28a745 !important; padding: 5px 10px; border-radius: 5px; display: inline-block; margin-right: 10px;">Оплата</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login" style="font-weight: bold; color: #28a745 !important; border: 2px solid #28a745; padding: 5px 10px; border-radius: 5px; display: inline-block; margin-right: 10px;">Авторизация</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register" style="font-weight: bold; color: #28a745 !important; border: 2px solid #28a745; padding: 5px 10px; border-radius: 5px; display: inline-block;">Регистрация</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index" style="font-weight: bold; color: #28a745 !important; border: 2px solid #28a745; padding: 5px 10px; border-radius: 5px; display: inline-block; margin-right: 10px;">Продукты</a>
                            </li>
                            @if (User.IsInRole("1"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="font-weight: bold; color: #28a745 !important; border: 2px solid #28a745; padding: 5px 10px; border-radius: 5px; display: inline-block; margin-right: 10px;">
                                        Выбор таблицы
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Country_Manufacturer" asp-action="Index" style="font-weight: bold; color: #28a745 !important;">Страны производителей</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Firms" asp-action="Index" style="font-weight: bold; color: #28a745 !important;">Фирмы</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Materials" asp-action="Index" style="font-weight: bold; color: #28a745 !important;">Материалы</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Suppliers" asp-action="Index" style="font-weight: bold; color: #28a745 !important;">Поставщики</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Index" style="font-weight: bold; color: #28a745 !important;">Категории</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Index" style="font-weight: bold; color: #28a745 !important;">Пользователи</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Roles" asp-action="Index" style="font-weight: bold; color: #28a745 !important;">Роли</a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            <li class="nav-item d-flex align-items-center">
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-link nav-link text-dark" style="padding: 5px 10px; font-weight: bold; border: 2px solid #28a745; border-radius: 5px; background-color: #28a745; color: white !important; margin-right: 10px; display: inline-block;">Выход</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
