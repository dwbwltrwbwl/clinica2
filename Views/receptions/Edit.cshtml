@model clinica2.Models.receptions

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color: #a35f56;">Редактирование</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_reception" />
            <div class="form-group">
                <label asp-for="date_reception" class="control-label">Дата приема</label>
                <input asp-for="date_reception" class="form-control" />
                <span asp-validation-for="date_reception" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="time_reception" class="control-label">Время приема</label>
                <input asp-for="time_reception" class="form-control" />
                <span asp-validation-for="time_reception" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_patient" class="control-label">Пациент</label>
                <select asp-for="id_patient" class="form-control" asp-items="ViewBag.id_patient"></select>
                <span asp-validation-for="id_patient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_doctor" class="control-label">Врач</label>
                <select asp-for="id_doctor" class="form-control" asp-items="ViewBag.id_doctor"></select>
                <span asp-validation-for="id_doctor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_status" class="control-label">Статус</label>
                <select asp-for="id_status" class="form-control" asp-items="ViewBag.id_status"></select>
                <span asp-validation-for="id_status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="symptoms" class="control-label">Симптомы</label>
                <input asp-for="symptoms" class="form-control" />
                <span asp-validation-for="symptoms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_diagnosis" class="control-label">Диагноз</label>
                <select asp-for="id_diagnosis" class="form-control" asp-items="ViewBag.id_diagnosis"></select>
                <span asp-validation-for="id_diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="treatment" class="control-label">Лечение</label>
                <input asp-for="treatment" class="form-control" />
                <span asp-validation-for="treatment" class="text-danger"></span>
            </div>
            <div class="form-group d-flex gap-3 mt-4">
                <input type="submit" value="Сохранить" class="btn btn-primary" style="font-weight: bold;" />
                <a asp-action="Index" class="btn"
                   style="font-weight: bold; padding: 6px 12px; border-radius: 4px; background-color: #a35f56; color: white; border: 1px solid #a35f56;">
                    Вернуться
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
