@model IEnumerable<clinica2.Models.doctors>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: #a35f56;">Врачи</h1>

<table class="table">
    <thead>
        <tr>
            <th style="color: #a35f56;">Фамилия</th>
            <th style="color: #a35f56;">Имя</th>
            <th style="color: #a35f56;">Отчество</th>
            <th style="color: #a35f56;">Телефон</th>
            <th style="color: #a35f56;">Логин</th>
            <th style="color: #a35f56;">Пароль</th>
            <th style="color: #a35f56;">Фото</th>
            <th style="color: #a35f56;">Специализация</th>
            <th style="color: #a35f56;">Роль</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.first_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.last_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.middle_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.specializations.specialization_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.roles.role_name)
            </td>
        </tr>
}
    </tbody>
</table>
